function line_handle = plot_ternary_line( name, value, wsum, varargin )
% plot_ternary_line basic form of plotting a line on the tenrary plot
%
%   Requires the axis index

    %% Process Inputs 
    
    % Check minimum and wsum
    if (nargin<2)
        error('Too few arguments')
    elseif (nargin<3)
        wsum = 1.0;
    end
    
    % Set default varargin
    if ()
        
    else
        
    end
    
    % process axis name
    iaxis = tenary_axis_name( iaxis );
    
    %% Build line Plot
    
    % Get local coordinate
    [A,B,~] = tern2base( iaxis, value, wsum, ticklinelength);
    
    % Convert to X/Y coordinates
    [xp,yp] = tern2cart(1,A,2,B);
    
    % Plot the grid
    line_handle = plot3( xp, yp, 0.0, varargin{:} );
    
end

